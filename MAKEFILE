OBJECTS = pmode.o brmsx.o io.o debug.o z80.o msxvram.o msx.o \
	  z80cb.o z80dd.o z80ed.o z80fd.o print.o printcb.o patch.o
TASMFLAGS = /ml /m2 /q /la

all : brmsx.exe

brmsx.exe : $(OBJECTS)
	tlink /3 /x $^, $@

%.o : %.asm
	tasm $(TASMFLAGS) $^,$@

z80.o : z80.asm opcode.inc
	tasm $(TASMFLAGS) z80.asm,$@

clean :
	del *.o
	del *.exe
	del *.lst
	del cart1.rom
